<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" android:padding="10dp">
            <corners
                android:radius="7dp"
                />
            <padding
                android:top="1dp"
                android:right="1dp"
                android:left="1dp"
                android:bottom="1dp"
                />
            <stroke
                android:color="#fafafa"
                android:dashWidth="5dp"
                />
            <gradient
                android:startColor="#ff9292"
                android:centerColor="#ff0000"
                android:endColor="#ff9292"
                android:angle="135"
                />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_action_cancel" />

</layer-list>