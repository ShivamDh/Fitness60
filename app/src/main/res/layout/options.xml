<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_marginTop="50dp"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:layout_height="615dp">


        <TextView
            android:text="Workout Tracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:textColor="?attr/colorPrimaryDark" />

        <TextView
            android:text="Utilize a Timer"
            android:layout_width="match_parent"
            android:id="@+id/textView6"
            android:translationY="6dp"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:layout_height="27dp"
            android:textSize="18sp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Some random text ca2n go here3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
             />

        <RadioGroup
            android:layout_width="wrap_content"
            android:id="@+id/timer_buttons"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <RadioButton
                android:text="Yes"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:id="@+id/TimerYes"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:textColorLink="@android:color/holo_red_dark" />

            <RadioButton
                android:text="No"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/TimerNo"
                android:layout_marginRight="131dp"
                android:layout_marginEnd="131dp"
                android:layout_alignBaseline="@+id/TimerYes"
                android:layout_alignBottom="@+id/TimerYes"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:translationX="30dp"
                android:textColorLink="@android:color/holo_red_dark" />
        </RadioGroup>

    </RelativeLayout>
</ScrollView>