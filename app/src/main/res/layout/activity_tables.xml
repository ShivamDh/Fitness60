<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/activity1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_workout_header"
            android:orientation="vertical">

            <TextView
                android:text="@string/set"
                android:id="@+id/sets_text"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark"
                android:background="@drawable/header_row"
                android:layout_height="25dp" />

            <TextView
                android:text="LBS"
                android:layout_width="match_parent"
                android:id="@+id/weight_text"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark"
                android:background="@drawable/header_row"
                android:layout_height="25dp"
                android:layout_weight="1" />

            <TextView
                android:text="@string/reps"
                android:layout_width="match_parent"
                android:id="@+id/reps_text"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark"
                android:background="@drawable/header_row"
                android:layout_height="25dp"
                android:layout_weight="1" />

            <TextView
                android:text="@string/timer"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/timer_text"
                android:background="@drawable/header_row"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_workout_more_sets" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="@string/add_set"
                android:layout_height="40dp"
                android:id="@+id/add_more_sets"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/add_set_button"
                android:layout_marginBottom="2dp"
                 />

            <Button
                android:text="@string/remove_set"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/remove_sets"
                android:layout_weight="1"
                android:background="@drawable/remove_set_button"
                android:layout_marginBottom="2dp"
                 />

        </TableRow>
    </TableLayout>

    <EditText
        android:layout_width="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="@string/Enter_workout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="39dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>