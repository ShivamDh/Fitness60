<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_marginTop="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/time_start"
                android:textColor="?android:attr/colorActivatedHighlight"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="60dp">

            <Button
                android:text="@string/distanceA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/distance_activity"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/distance_activity"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp" />

            <Button
                android:text="@string/bodyweightE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bodyweight_exercise"
                android:layout_weight="1"
                android:background="@drawable/bodyweight_exercise"
                android:textColor="#000000"
                android:layout_marginTop="9.5dp"
                android:layout_marginRight="5dp"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">


            <Button
                android:text="@string/addA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_activity"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_activity"
                android:textStyle="normal|italic"
                android:textSize="20sp"
                android:textColor="#000a79" />

            <Button
                android:text="@string/removeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/remove_last_activity"
                android:layout_weight="1"
                android:layout_marginTop="3.5dp"
                android:background="@drawable/remove_activity"
                android:textStyle="normal|italic"
                android:textSize="20sp"
                android:textColor="#f4f410" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>