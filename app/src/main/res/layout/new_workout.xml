<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_marginTop="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="500dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_start"
            android:layout_marginLeft="95dp"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textStyle="italic"
            android:layout_marginStart="95dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="@string/Enter_workout"
            android:layout_marginTop="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/new_workout_header"
                android:orientation="vertical">

                <TextView
                    android:text="SET"
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@drawable/header_row"
                    android:layout_height="25dp" />

                <TextView
                    android:text="LBS"
                    android:layout_width="match_parent"
                    android:id="@+id/textView5"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@drawable/header_row"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="REPS"
                    android:layout_width="match_parent"
                    android:id="@+id/textView8"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@drawable/header_row"
                    android:layout_height="25dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="TIMER"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/textView9"
                    android:background="@drawable/header_row"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/new_workout_more_sets" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:text="ADD SET"
                    android:layout_height="40dp"
                    android:id="@+id/add_more_sets"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:fadingEdge="horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="#352e01" />

            </TableRow>
        </TableLayout>
    </RelativeLayout>
</ScrollView>