<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_marginTop="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="500dp">

        <TextView
            android:text="First Activity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workout_activity1"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editText2"
            android:text="Enter name"
            android:layout_alignBaseline="@+id/workout_activity1"
            android:layout_alignBottom="@+id/workout_activity1"
            android:layout_toRightOf="@+id/workout_activity1"
            android:layout_toEndOf="@+id/workout_activity1" />
    </RelativeLayout>
</ScrollView>